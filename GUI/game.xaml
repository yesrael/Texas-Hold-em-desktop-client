        <Label x:Name="player3_name" Visibility="Hidden" Content="palyer1_name" HorizontalAlignment="Left" Margin="868,334,0,0" VerticalAlignment="Top" Width="96" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Foreground="#FFFFF4F4" FontWeight="Bold" Height="26"/>
        <Label x:Name="player3_cash" Visibility="Hidden" Content="      $ 1000" HorizontalAlignment="Left" Margin="868,459,0,0" VerticalAlignment="Top" Width="96" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Foreground="#FFFFF4F4" Height="22" FontWeight="Bold"/>
        <Border Name="player4_avatar" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="99" Margin="709,561,0,0" VerticalAlignment="Top" Width="96"/>
        <Label x:Name="player4_name" Visibility="Hidden" Content="palyer1_name" HorizontalAlignment="Left" Margin="709,535,0,0" VerticalAlignment="Top" Width="96" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Foreground="#FFFFF4F4" FontWeight="Bold" Height="26"/>
        <Label x:Name="player4_cash" Visibility="Hidden" Content="      $ 1000" HorizontalAlignment="Left" Margin="709,660,0,0" VerticalAlignment="Top" Width="96" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Foreground="#FFFFF4F4" Height="22" FontWeight="Bold"/>
        <Border x:Name="player5_avatar" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="99" Margin="194,561,0,0" VerticalAlignment="Top" Width="96"/>
        <Label x:Name="player5_name" Visibility="Hidden" Content="palyer1_name" HorizontalAlignment="Left" Margin="194,535,0,0" VerticalAlignment="Top" Width="96" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Foreground="#FFFFF4F4" FontWeight="Bold" Height="26"/>
        <Label x:Name="player5_cash" Visibility="Hidden" Content="      $ 1000" HorizontalAlignment="Left" Margin="194,660,0,0" VerticalAlignment="Top" Width="96" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Foreground="#FFFFF4F4" Height="22" FontWeight="Bold"/>
        <Border x:Name="player6_avatar" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="99" Margin="28,360,0,0" VerticalAlignment="Top" Width="96"/>
        <Label x:Name="player6_name" Visibility="Hidden" Content="palyer1_name" HorizontalAlignment="Left" Margin="28,334,0,0" VerticalAlignment="Top" Width="96" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Foreground="#FFFFF4F4" FontWeight="Bold" Height="26"/>
        <Label x:Name="player6_cash" Visibility="Hidden" Content="      $ 1000" HorizontalAlignment="Left" Margin="28,459,0,0" VerticalAlignment="Top" Width="96" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Foreground="#FFFFF4F4" Height="22" FontWeight="Bold"/>
        <Border x:Name="player7_avatar" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="99" Margin="28,140,0,0" VerticalAlignment="Top" Width="96"/>
        <Label x:Name="player7_name" Visibility="Hidden" Content="palyer1_name" HorizontalAlignment="Left" Margin="28,114,0,0" VerticalAlignment="Top" Width="96" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Foreground="#FFFFF4F4" FontWeight="Bold" Height="26"/>
        <Label x:Name="player7_cash" Visibility="Hidden" Content="      $ 1000" HorizontalAlignment="Left" Margin="28,237,0,0" VerticalAlignment="Top" Width="96" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Foreground="#FFFFF4F4" Height="22" FontWeight="Bold"/>
        <Border x:Name="player8_avatar" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="99" Margin="194,55,0,0" VerticalAlignment="Top" Width="96"/>
        <Label x:Name="player8_name" Visibility="Hidden" Content="palyer1_name" HorizontalAlignment="Left" Margin="194,29,0,0" VerticalAlignment="Top" Width="96" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Foreground="#FFFFF4F4" FontWeight="Bold" Height="26"/>
        <Label x:Name="player8_cash" Visibility="Hidden" Content="      $ 1000" HorizontalAlignment="Left" Margin="194,154,0,0" VerticalAlignment="Top" Width="96" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Foreground="#FFFFF4F4" Height="22" FontWeight="Bold"/>
        <Button x:Name="leave_game" Content="Leave game" HorizontalAlignment="Left" Margin="852,19,0,0" VerticalAlignment="Top" Width="112" Height="36" FontSize="14" Click="leave_game_Click"/>
        <Button x:Name="fold_button" Visibility="Hidden" Content="" HorizontalAlignment="Left" Margin="232,472,0,0" VerticalAlignment="Top" Width="89" Height="31" Click="fold_button_Click">
            <Button.Background>
                <ImageBrush ImageSource="pictures/fold.PNG" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="check_button" Visibility="Hidden" Content="Check" HorizontalAlignment="Left" Margin="348,472,0,0" VerticalAlignment="Top" Width="91" Height="31" RenderTransformOrigin="-0.193,0.452" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}" Click="check_button_Click"/>
        <Button x:Name="call_button" Visibility="Hidden" Content="" HorizontalAlignment="Left" Margin="465,472,0,0" VerticalAlignment="Top" Width="91" Height="31" Click="call_button_Click">
            <Button.Background>
                <ImageBrush ImageSource="pictures/call.PNG" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="raise_button" Visibility="Hidden" Content="" HorizontalAlignment="Left" Margin="588,472,0,0" VerticalAlignment="Top" Width="88" Height="31" Click="raise_button_Click">
            <Button.Background>
                <ImageBrush ImageSource="pictures/raise.PNG" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Slider x:Name="slider" Visibility="Hidden" IsSnapToTickEnabled="True" TickFrequency="1"  HorizontalAlignment="Left" Margin="688,488,0,0"  VerticalAlignment="Top" Width="102" Background="#FF113E9E"/>
        <TextBlock x:Name="raiseBet" Visibility="Hidden" Text="{Binding ElementName=slider,Path=Value}" HorizontalAlignment="Left" Margin="750,465,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="61" Height="20" Foreground="#FFFDFAFA"/>
        <TextBlock x:Name="Raise_to" Visibility="Hidden" HorizontalAlignment="Left" Margin="690,464,0,0" TextWrapping="Wrap" Text="Raise to:" VerticalAlignment="Top" Foreground="#FFF9F7F7" FontWeight="Bold"/>
        <TextBlock x:Name="now_playing" HorizontalAlignment="Left" Margin="203,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="49" Width="179" Foreground="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" FontWeight="Bold" FontSize="16"><Run Text="now playing: "/></TextBlock>
        <TextBlock x:Name="cashOnTheTable" HorizontalAlignment="Left" Margin="440,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="179" Foreground="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" FontWeight="Bold" FontSize="16"><Run Text="cash: 0$"/></TextBlock>
        <Border x:Name="my_first_card"  BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="110" Margin="415,571,0,0" VerticalAlignment="Top" Width="80"/>
        <Border x:Name="my_second_card"  BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="110" Margin="514,571,0,0" VerticalAlignment="Top" Width="80"/>
        <TextBlock x:Name="your_cards" HorizontalAlignment="Left" Margin="456,535,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="93" Foreground="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" FontWeight="Bold" FontSize="16"><Run FlowDirection="RightToLeft" Text="your cards"/><Run Text=": "/></TextBlock>
        <Label x:Name="labelName" Content="Label" HorizontalAlignment="Left" Height="36" Margin="28,19,0,0" VerticalAlignment="Top" Width="141" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="publicMessagesBox" HorizontalAlignment="Left" Height="227" Margin="1008,55,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="334" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionTextBrushKey}}" FontFamily="Times New Roman" FontSize="16" Foreground="#FFFDFDFD"/>
        <Button x:Name="sendMessageButton" Content="Send message" HorizontalAlignment="Left" Margin="1008,360,0,0" VerticalAlignment="Top" Width="114" Height="27" Click="sendMessageButton_Click"/>
        <TextBox x:Name="publicWriteMessageBox" HorizontalAlignment="Left" Height="23" Margin="1008,315,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="334" AutomationProperties.HelpText="Put your message here" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="-5"/>
                </TransformGroup>
            </TextBox.RenderTransform>
            <TextBox.Effect>
                <DropShadowEffect Color="#FF2C4D19" Direction="200" ShadowDepth="15"/>
            </TextBox.Effect>
            <TextBox.CaretBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.CaretBrush>
        </TextBox>
        <Button x:Name="clearButton" Content="Clear" HorizontalAlignment="Left" Margin="1144,360,0,0" VerticalAlignment="Top" Width="86" Height="27" Click="clearButton_Click"/>
        <Label x:Name="publicChatLabel" Content="Public chat" HorizontalAlignment="Left" Margin="1008,21,0,0" VerticalAlignment="Top" Height="38" Width="171" FontWeight="Bold" FontSize="14" Foreground="#FF0A0AEC"/>
        <Label x:Name="privateChatLabel" Content="Private chat" HorizontalAlignment="Left" Margin="1008,442,0,0" VerticalAlignment="Top" Height="38" Width="171" FontWeight="Bold" FontSize="14" Foreground="#FF0A0AEC"/>
        <TextBox x:Name="privateMessagesBox" HorizontalAlignment="Left" Height="153" Margin="1008,477,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="334" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionTextBrushKey}}" Foreground="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
        <Button x:Name="message1" Visibility="Hidden" HorizontalAlignment="Left" Margin="647,145,0,0" VerticalAlignment="Top" Width="62" Height="31" Click="message1_Click">
            <Button.Background>
                <ImageBrush ImageSource="pictures/message.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="message2" Visibility="Hidden" HorizontalAlignment="Left" Margin="806,228,0,0" VerticalAlignment="Top" Width="62" Height="31" Click="message2_Click">
            <Button.Background>
                <ImageBrush ImageSource="pictures/message.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="message3" Visibility="Hidden" HorizontalAlignment="Left" Margin="806,450,0,0" VerticalAlignment="Top" Width="62" Height="31" Click="message3_Click">
            <Button.Background>
                <ImageBrush ImageSource="pictures/message.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="message4" Visibility="Hidden" HorizontalAlignment="Left" Margin="647,653,0,0" VerticalAlignment="Top" Width="62" Height="31" Click="message4_Click">
            <Button.Background>
                <ImageBrush ImageSource="pictures/message.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="message5" Visibility="Hidden" HorizontalAlignment="Left" Margin="290,653,0,0" VerticalAlignment="Top" Width="62" Height="31"  Click="message5_Click">
            <Button.Background>
                <ImageBrush ImageSource="pictures/message.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="message8" Visibility="Hidden" HorizontalAlignment="Left" Margin="291,145,0,0" VerticalAlignment="Top" Width="62" Height="31" Click="message8_Click">
            <Button.Background>
                <ImageBrush ImageSource="pictures/message.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="message6" Visibility="Hidden" HorizontalAlignment="Left" Margin="124,450,0,0" VerticalAlignment="Top" Width="62" Height="31" Click="message6_Click">
            <Button.Background>
                <ImageBrush ImageSource="pictures/message.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="message7" Visibility="Hidden" HorizontalAlignment="Left" Margin="124,229,0,0" VerticalAlignment="Top" Width="62" Height="31" Click="message7_Click">
            <Button.Background>
                <ImageBrush ImageSource="pictures/message.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="whisper" Content="whisper to spectator" HorizontalAlignment="Left" Margin="1008,653,0,0" VerticalAlignment="Top" Width="130" Height="29" Click="whisper_Click"/>
    </Grid>
</Window>
